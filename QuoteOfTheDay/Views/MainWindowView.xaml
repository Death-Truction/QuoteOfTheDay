<Window x:Class="QuoteOfTheDay.Views.MainWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuoteOfTheDay"
        xmlns:vm="clr-namespace:QuoteOfTheDay.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="50"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <ContentControl Grid.Column="0"  Grid.ColumnSpan="2" Grid.Row="0" Grid.RowSpan="2" Content="{Binding CurrentVm}" />
        <Button Grid.Column="1" Grid.Row="0" Command="{Binding OpenOrCloseSettingsCommand}" Background="Transparent">
            <Image Source="{Binding OpenOrCloseSettingsIconSource}"></Image>
        </Button>
    </Grid>
</Window>
